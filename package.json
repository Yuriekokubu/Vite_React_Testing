{
  "name": "my-awesome-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run start:auth\" \"vite\"",
    "start:auth": "node server.js",
    "start:auth:test": "cross-env NODE_ENV=test node server.js",
    "prebuild": "npm run lint && npm run test:ci",
    "build": "vite build",
    "postbuild": "npm run test:prod",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ci": "concurrently -s first -k \"npm run start:auth:test\" \"vite\" \"playwright test --reporter=list,html\"",
    "test:install": "npx playwright install",
    "test:prod": "playwright test --project=production",
    "test:prod:ui": "playwright test --project=production --ui --headed",
    "serve:prod": "concurrently \"npm run start:auth\" \"npx serve dist -l 4173\""
  },
  "dependencies": {
    "better-sqlite3": "^8.3.0",
    "express": "^4.18.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/experimental-ct-react": "^1.58.2",
    "@playwright/test": "^1.58.2",
    "@types/node": "^25.3.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^8.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "serve": "^14.2.5",
    "vite": "^6.4.1"
  }
}
